extends layout

block content
  h1 New Book

  form(method='post')
    if errors && errors.length > 0
      h2.error Oooops!
        ul.error
          each error in errors
            li= error.message

    div.form-group
      label(for='title') Title:
      input(id='title', type='text', name='title' value=book.title)
    div.form-group
      label(for='author') Author:
      input(id='author', type='text', name='author' value=book.author)
    div.form-group
      label(for='genre') Genre:
      input(id='genre', type='text', name='genre' value=book.genre)
    div.form-group
      label(for='year') Year:
      input(id='year', type='text', name='year' value=book.year)
    button.btn.btn-primary(type='submit', value='Update Book') Create New Book
    
    p.
    a(href="/books") Cancel